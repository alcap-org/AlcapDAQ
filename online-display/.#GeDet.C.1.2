GeDet()
{
  TCanvas *MuSunCanvas = (TCanvas *) gROOT->GetListOfCanvases()->At(0);
  MuSunCanvas->Divide(3,3);

  
  // Pad 1-3 : amplitude of 3 channels
  TH1* hGeAmplitude[3];
  for(int i=0; i<3; i++) {
    MuSunCanvas->cd(1+i);
    char name[50]; sprintf(name,"hGeAmplitude_%d",i+1);
    oldhist = gROOT->FindObjectAny(name); if(oldhist) delete oldhist;
    hGeAmplitude[i] = 
      ((TH2*)getHist("hGeAmplitude"))->ProjectionX(name,1,2);
    hGeAmplitude[i]->Rebin(20);
    hGeAmplitude[i]->Draw();
  }
